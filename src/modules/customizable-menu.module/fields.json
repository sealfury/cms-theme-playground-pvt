[
  {
    "label": "Top-Level Menu Items",
    "name": "top_level_item",
    "id": "top_level_item",
    "type": "group",
    "occurrence": {
      "min": 3,
      "max": 7,
      "default": 5
    },
    "children": [
      {
        "label": "Top-Level Item Name",
        "name": "item_name",
        "id": "top_level_item.item_name",
        "type": "text",
        "default": "Products"
      },
      {
        "label": "Is this a dropdown or a page link?",
        "name": "item_type",
        "id": "top_level_item.item_type",
        "type": "choice",
        "display": "radio",
        "choices": [
          ["dropdown", "Dropdown"],
          ["page", "Page Link"]
        ],
        "default": "dropdown"
      },
      {
        "label": "Page Link",
        "name": "page_link",
        "id": "top_level_item.page_link",
        "type": "link",
        "supported_types": ["EXTERNAL", "CONTENT", "BLOG"],
        "default": {
          "url": {
            "content_id": null,
            "type": "CONTENT",
            "href": ""
          },
          "open_in_new_tab": false,
          "no_follow": false,
          "sponsored": false,
          "user_generated_content": false
        },
        "visibility": {
          "controlling_field": "top_level_item.item_type",
          "controlling_value_regex": "page",
          "operator": "EQUAL"
        }
      },
      {
        "label": "What layout should this dropdown have?",
        "name": "menu_type",
        "id": "top_level_item.menu_type",
        "type": "choice",
        "display": "select",
        "choices": [
          ["products", "Products"],
          ["why", "Why MaintMaster"],
          ["cases", "Client Cases"],
          ["resources", "Resources"]
        ],
        "visibility": {
          "controlling_field": "top_level_item.item_type",
          "controlling_value_regex": "dropdown",
          "operator": "EQUAL"
        },
        "default": "products"
      },
      {
        "label": "Products Menu Items",
        "name": "products",
        "id": "top_level_item.products",
        "type": "group",
        "occurrence": {
          "min": 1,
          "max": 2,
          "default": 2
        },
        "children": [
          {
            "label": "Menu Section Title",
            "name": "section_title",
            "type": "text",
            "default": "Product"
          },
          {
            "label": "Use Large Menu Item Cards?",
            "name": "use_large",
            "id": "use_large",
            "type": "boolean",
            "display": "toggle",
            "inline_help_text": "Max 2 large cards/section, Max 6 small cards/section",
            "default": false
          },
          {
            "label": "Card Details (Large)",
            "name": "large",
            "type": "group",
            "occurrence": {
              "min": 1,
              "max": 2,
              "default": 2
            },
            "visibility": {
              "controlling_field": "use_large",
              "controlling_value_regex": "true",
              "operator": "EQUAL"
            },
            "children": [
              {
                "label": "Card Title",
                "name": "title",
                "type": "text",
                "default": "MaintMaster CMMS"
              },
              {
                "label": "Page Link",
                "name": "link",
                "type": "link",
                "placeholder": "Page to link to",
                "supported_types": ["CONTENT", "BLOG"],
                "default": {
                  "url": {
                    "content_id": null,
                    "type": "CONTENT",
                    "href": ""
                  },
                  "open_in_new_tab": false,
                  "no_follow": false,
                  "sponsored": false,
                  "user_generated_content": false
                }
              },
              {
                "label": "Card Icon",
                "name": "icon",
                "type": "image",
                "responsive": true,
                "resizable": true,
                "show_loading": false,
                "default": {
                  "size_type": "auto_custom_max",
                  "src": "",
                  "alt": "dropdown-card-icon",
                  "max_width": 22,
                  "max_height": 22
                }
              },
              {
                "label": "Card Description",
                "name": "description",
                "type": "richtext",
                "placeholder": "Add a product description...",
                "inline_help_text": "Text is clipped at 3 lines (~120 chars)"
              },
              {
                "label": "Card Features",
                "name": "features",
                "type": "text",
                "occurrence": {
                  "min": 2,
                  "max": 6,
                  "default": 3
                },
                "default": [
                  "Flexible, efficient & dynamic",
                  "The right information at the right time"
                ]
              }
            ]
          },
          {
            "label": "Card Details (Small)",
            "name": "small",
            "type": "group",
            "occurrence": {
              "min": 3,
              "max": 6,
              "default": 6
            },
            "visibility": {
              "controlling_field": "use_large",
              "controlling_value_regex": "false",
              "operator": "EQUAL"
            },
            "children": [
              {
                "label": "Card Title",
                "name": "title",
                "type": "text",
                "default": "Scheduling Tool"
              },
              {
                "label": "Page Link",
                "name": "link",
                "type": "link",
                "placeholder": "Page to link to",
                "supported_types": ["CONTENT", "BLOG"],
                "default": {
                  "url": {
                    "content_id": null,
                    "type": "CONTENT",
                    "href": ""
                  },
                  "open_in_new_tab": false,
                  "no_follow": false,
                  "sponsored": false,
                  "user_generated_content": false
                }
              },
              {
                "label": "Card Icon",
                "name": "icon",
                "type": "image",
                "responsive": true,
                "resizable": true,
                "show_loading": false,
                "default": {
                  "size_type": "auto_custom_max",
                  "src": "",
                  "alt": "dropdown-card-icon",
                  "max_width": 22,
                  "max_height": 22
                }
              },
              {
                "label": "Card Description",
                "name": "description",
                "type": "text",
                "help_text": "Max 1 line or ~ 40 chars",
                "default": "Morbi leo risus, porta ac consectetur ac"
              }
            ]
          }
        ],
        "visbility_rules": "ADVANCED",
        "advanced_visibility": {
          "boolean_operator": "AND",
          "criteria": [
            {
              "controlling_field": "top_level_item.menu_type",
              "controlling_value_regex": "products",
              "operator": "EQUAL"
            },
            {
              "controlling_field": "top_level_item.item_type",
              "controlling_value_regex": "page",
              "operator": "NOT_EQUAL"
            }
          ]
        }
      },
