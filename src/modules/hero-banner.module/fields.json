[
  {
    "label": "Mode",
    "name": "mode",
    "type": "choice",
    "choices": [
      ["light", "Light"],
      ["dark", "Dark"],
      ["image", "Image"]
    ],
    "display": "radio",
    "default": "light"
  },
  {
    "label": "Background Image",
    "name": "background_image",
    "type": "image",
    "required": false,
    "show_loading": false,
    "responsive": true,
    "resizeable": false,
    "default": {
      "size_type": "exact",
      "src": "",
      "alt": "hero-banner-image-alt-text",
      "loading": "lazy"
    },
    "visibility": {
      "controlling_field": "mode",
      "controlling_value_regex": "image",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Breadcrumbs",
    "name": "breadcrumb",
    "id": "breadcrumb",
    "type": "group",
    "occurrence": {
      "min": 0,
      "max": 6,
      "default": 0
    },
    "children": [
      {
        "label": "Breadcrumb Text",
        "name": "text",
        "id": "breadcrumb.text",
        "type": "text"
      },
      {
        "label": "Breadcrumb Page Link",
        "name": "link",
        "id": "breadcrumb.link",
        "type": "link",
        "supported_types": ["CONTENT", "BLOG"],
        "default": {
          "url": {
            "content_id": null,
            "type": "CONTENT",
            "href": ""
          }
        }
      }
    ]
  },
  {
    "label": "Eyebrow Text",
    "name": "eyebrow",
    "type": "text"
  },
  {
    "label": "Use Richtext Editor For Header Content?",
    "name": "use_richtext",
    "id": "use_richtext",
    "type": "boolean",
    "display": "toggle",
    "help_text": "To control header text size, style, and color, toggle ON.\nFor default text styles, toggle OFF.",
    "default": false
  },
  {
    "label": "Header Text",
    "name": "header_text",
    "type": "text",
    "visibility": {
      "controlling_field": "use_richtext",
      "controlling_value_regex": "false",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Header Rich Text",
    "name": "header_richtext",
    "type": "richtext",
    "visibility": {
      "controlling_field": "use_richtext",
      "controlling_value_regex": "true",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Subheader Text",
    "name": "subheader",
    "type": "richtext"
  },
  {
    "label": "Buttons",
    "name": "buttons",
    "type": "group",
    "occurrence": {
      "default": 2,
      "min": 0,
      "max": 2,
      "sorting_label_field": "buttons.button"
    },
    "children": [
      {
        "label": "Button Text",
        "name": "text",
        "id": "button.text",
        "type": "text",
        "show_emoji_picker": false,
        "allow_new_line": false
      },
      {
        "label": "Button Link URL",
        "name": "link_url",
        "id": "button.link_url",
        "type": "url",
        "supported_types": ["EXTERNAL", "CONTENT", "FILE", "BLOG"]
      },
      {
        "label": "Button Type",
        "name": "type",
        "type": "choice",
        "choices": [
          ["teal", "Teal"],
          ["dark", "Dark"],
          ["transparent", "Transparent"]
        ],
        "default": "teal",
        "visibility": {
          "controlling_field": "mode",
          "controlling_value_regex": "dark",
          "operator": "NOT_EQUAL"
        }
      }
    ]
  },
  {
    "label": "Column Two Content",
    "name": "column",
    "id": "column",
    "type": "choice",
    "display": "select",
    "choices": [
      ["logo", "Logo Image"],
      ["video", "Video Player"],
      ["links", "Links Menu"],
      ["form", "Form"]
    ],
    "default": "logo"
  },
  {
    "label": "Logo Image",
    "name": "logo_image",
    "type": "image",
    "show_loading": true,
    "responsive": true,
    "resizeable": true,
    "default": {
      "size_type": "exact",
      "src": "",
      "alt": "maintmaster-hero-logo-image",
      "loading": "lazy",
      "height": null,
      "width": 600,
      "max_height": null,
      "max_width": 720
    },
    "visbility_rules": "ADVANCED",
    "advanced_visibility": {
      "boolean_operator": "OR",
      "criteria": [
        {
          "controlling_field": "column",
          "controlling_value_regex": "logo",
          "operator": "EQUAL"
        },
        {
          "controlling_field": "column",
          "controlling_value_regex": "video",
          "operator": "EQUAL"
        },
        {
          "controlling_field": "column",
          "controlling_value_regex": "links",
          "operator": "NOT_EQUAL"
        }
      ]
    }
  },
  {
    "label": "Video Player",
    "name": "video",
    "type": "videoplayer",
    "required": false,
    "show_advanced_options": true,
    "visibility": {
      "controlling_field": "column",
      "controlling_value_regex": "video",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Form Section",
    "name": "form_section",
    "type": "group",
    "visibility": {
      "controlling_field": "column",
      "controlling_value_regex": "form",
      "operator": "EQUAL"
    },
    "children": [
      {
        "label": "Form Title",
        "name": "title",
        "type": "richtext",
        "default": "Add A Form Title"
      },
      {
        "label": "Form",
        "name": "form",
        "type": "form",
        "default": {
          "form_id": null
        }
      }
    ]
  },
  {
    "label": "Links Menu",
    "name": "links_menu",
    "type": "group",
    "required": false,
    "occurrence": {
      "min": 0,
      "max": 2,
      "default": 2
    },
    "visbility": {
      "controlling_field": "column",
      "controlling_value_regex": "links",
      "operator": "EQUAL"
    },
    "children": [
      {
        "label": "Section Header",
        "name": "header",
        "type": "text",
        "default": "This is MaintMaster"
      },
      {
        "label": "Links",
        "name": "links",
        "type": "group",
        "supported_types": ["EXTERNAL", "CONTENT"],
        "show_advanced_rel_options": false,
        "occurrence": {
          "min": 2,
          "max": 5,
          "default": 3
        },
        "children": [
          {
            "label": "Link Text",
            "name": "text",
            "type": "text"
          },
          {
            "label": "Link Info",
            "name": "link",
            "type": "link",
            "supported_types": ["EXTERNAL", "CONTENT"],
            "show_advanced_rel_options": false,
            "default": {
              "url": {
                "content_id": null,
                "type": "EXTERNAL",
                "href": ""
              },
              "open_in_new_tab": false,
              "no_follow": false,
              "sponsored": false,
              "user_generated_content": false
            }
          }
        ]
      }
    ]
  },
  {
    "label": "Styles",
    "name": "styles",
    "type": "group",
    "tab": "STYLE",
    "children": [
      {
        "label": "Override Background Colour",
        "name": "override_background",
        "type": "boolean",
        "display": "toggle",
        "inline_help_text": "Toggle on to select a colour to override default hero banner background colour (Light & Dark Mode Only)",
        "default": false
      },
      {
        "label": "Background Color",
        "name": "background",
        "type": "color",
        "default": {
          "color": "#FFFFFF"
        },
        "visibility": {
          "controlling_field": "styles.override_background",
          "controlling_value_regex": "true",
          "operator": "EQUAL"
        }
      }
    ]
  }
]
