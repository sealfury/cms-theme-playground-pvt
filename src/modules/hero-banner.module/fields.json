[
  {
    "label": "Mode",
    "name": "mode",
    "type": "choice",
    "choices": [
      ["light", "Light"],
      ["dark", "Dark"],
      ["image", "Image"]
    ],
    "display": "radio",
    "default": "light"
  },
  {
    "label": "Background Image",
    "name": "background_image",
    "type": "image",
    "required": false,
    "show_loading": false,
    "responsive": true,
    "resizeable": false,
    "default": {
      "size_type": "exact",
      "src": "",
      "alt": "hero-banner-image-alt-text",
      "loading": "lazy"
    },
    "visibility": {
      "controlling_field": "mode",
      "controlling_value_regex": "image",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Breadcrumb Text",
    "name": "breadcrumb_text",
    "type": "text"
  },
  {
    "label": "Header Text",
    "name": "header",
    "type": "richtext",
    "inline_help_text": "Embolden words you'd like to be coloured teal"
  },
  {
    "label": "Subheader Text",
    "name": "subheader",
    "type": "richtext"
  },
  {
    "label": "Buttons",
    "name": "buttons",
    "type": "group",
    "occurrence": {
      "default": 2,
      "min": 0,
      "max": 2,
      "sorting_label_field": "buttons.button"
    },
    "children": [
      {
        "label": "Button Text",
        "name": "text",
        "id": "button.text",
        "type": "text",
        "show_emoji_picker": false,
        "allow_new_line": false
      },
      {
        "label": "Button Link URL",
        "name": "link_url",
        "id": "button.link_url",
        "type": "url",
        "supported_types": ["EXTERNAL", "CONTENT", "FILE", "BLOG"]
      },
      {
        "label": "Button Type",
        "name": "type",
        "type": "choice",
        "choices": [
          ["teal", "Teal"],
          ["dark", "Dark"],
          ["transparent", "Transparent"]
        ],
        "default": "teal",
        "visibility": {
          "controlling_field": "mode",
          "controlling_value_regex": "dark",
          "operator": "NOT_EQUAL"
        }
      }
    ]
  },
  {
    "label": "Column Two Content",
    "name": "column",
    "id": "column",
    "type": "choice",
    "display": "select",
    "choices": [
      ["logo", "Logo Image"],
      ["video", "Video Player"],
      ["links", "Links Menu"],
      ["small_logo", "Small Logo Box"]
    ]
  },
  {
    "label": "Logo Image",
    "name": "logo_image",
    "type": "image",
    "show_loading": true,
    "responsive": true,
    "resizeable": true,
    "default": {
      "size_type": "auto",
      "src": "",
      "alt": "maintmaster-hero-logo-image",
      "loading": "lazy",
      "max_height": 420,
      "max_width": 500
    },
    "visbility_rules": "ADVANCED",
    "advanced_visibility": {
      "boolean_operator": "OR",
      "criteria": [
        {
          "controlling_field": "column",
          "controlling_value_regex": "logo",
          "operator": "EQUAL"
        },
        {
          "controlling_field": "column",
          "controlling_value_regex": "video",
          "operator": "EQUAL"
        },
        {
          "controlling_field": "column",
          "controlling_value_regex": "links",
          "operator": "NOT_EQUAL"
        }
      ]
    }
  },
  {
    "label": "Video Player",
    "name": "video",
    "type": "videoplayer",
    "required": false,
    "show_advanced_options": true,
    "visibility": {
      "controlling_field": "column",
      "controlling_value_regex": "video",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Links Menu",
    "name": "links_menu",
    "type": "group",
    "required": false,
    "occurrence": {
      "min": 0,
      "max": 2,
      "default": 2
    },
    "visbility": {
      "controlling_field": "column",
      "controlling_value_regex": "links",
      "operator": "EQUAL"
    },
    "children": [
      {
        "label": "Section Header",
        "name": "header",
        "type": "text",
        "default": "This is MaintMaster"
      },
      {
        "label": "Links",
        "name": "links",
        "type": "group",
        "supported_types": ["EXTERNAL", "CONTENT"],
        "show_advanced_rel_options": false,
        "occurrence": {
          "min": 2,
          "max": 5,
          "default": 3
        },
        "children": [
          {
            "label": "Link Text",
            "name": "text",
            "type": "text"
          },
          {
            "label": "Link Info",
            "name": "link",
            "type": "link",
            "supported_types": ["EXTERNAL", "CONTENT"],
            "show_advanced_rel_options": false,
            "default": {
              "url": {
                "content_id": null,
                "type": "EXTERNAL",
                "href": ""
              },
              "open_in_new_tab": false,
              "no_follow": false,
              "sponsored": false,
              "user_generated_content": false
            }
          }
        ]
      }
    ]
  }
]
