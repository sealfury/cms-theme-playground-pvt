[
  {
    "label": "Use Richtext Editor for Header Content?",
    "name": "use_richtext",
    "id": "use_richtext",
    "type": "boolean",
    "display": "toggle",
    "help_text": "To control header text size, style, and color, toggle ON. For default text styles, toggle OFF.",
    "default": false
  },
  {
    "label": "Header Text",
    "name": "header_text",
    "type": "text",
    "visibility": {
      "controlling_field": "use_richtext",
      "controlling_value_regex": "false",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Header Rich Text",
    "name": "header_richtext",
    "type": "richtext",
    "visibility": {
      "controlling_field": "use_richtext",
      "controlling_value_regex": "true",
      "operator": "EQUAL"
    }
  },
  {
    "label": "Subheader Text",
    "name": "subheader",
    "type": "richtext"
  },
  {
    "label": "Eyebrow Text",
    "name": "eyebrow",
    "type": "text"
  },
  {
    "label": "Breadcrumbs",
    "name": "breadcrumb",
    "id": "breadcrumb",
    "type": "group",
    "occurrence": {
      "min": 0,
      "max": 6,
      "default": 0
    },
    "children": [
      {
        "label": "Breadcrumb Text",
        "name": "text",
        "id": "breadcrumb.text",
        "type": "text"
      },
      {
        "label": "Breadcrumb Page Link",
        "name": "link",
        "id": "breadcrumb.link",
        "type": "link",
        "supported_types": ["CONTENT"],
        "default": {
          "url": {
            "content_id": null,
            "type": "CONTENT",
            "href": ""
          }
        }
      }
    ]
  },
  {
    "label": "Form",
    "name": "form",
    "type": "form",
    "default": {
      "form_id": null
    }
  },
  {
    "label": "MaintMaster Logo",
    "name": "logo",
    "type": "image",
    "required": false,
    "resizable": true,
    "show_loading": false,
    "default": {
      "size_type": "exact",
      "height": 58,
      "width": 128,
      "max_width": 300,
      "max_height": 300,
      "src": "image-alt-text",
      "loading": "lazy"
    }
  },
  {
    "label": "Styles",
    "name": "styles",
    "type": "group",
    "children": [
      {
        "label": "Logo Section Background Color",
        "name": "background_color",
        "type": "color",
        "default": {
          "color": "#0F1E2D"
        }
      }
    ]
  }
]
