[
  {
    "label": "Customer Logo",
    "name": "logo",
    "type": "image",
    "responsive": true,
    "resizable": true,
    "show_loading": false,
    "default": {
      "size_type": "exact",
      "src": "",
      "alt": "logo-image-alt-text",
      "loading": "lazy", 
      "width": 256,
      "height": 256,
      "max_width": 256,
      "max_height": 256
    }
  },
  {
    "label": "Section Text",
    "name": "text",
    "type": "richtext"
  },
  {
    "label": "Toggle Light Mode",
    "name": "light_mode",
    "type": "boolean",
    "display": "toggle",
    "inline_help_text": "Switches background & text to light mode when toggled on",
    "default": false
  },
  {
    "label": "Styles",
    "name": "styles",
    "type": "group",
    "tab": "STYLE",
    "children": [
      {
        "label": "Dark Mode Background Color",
        "name": "darkmode_background",
        "type": "color",
        "visibility": {
          "controlling_field": "light_mode",
          "controlling_value_regex": "false",
          "operator": "EQUAL"
        },
        "default": {
          "color": "#0F1E2D"
        }
      },
      {
        "label": "Dark Mode Text Color",
        "name": "darkmode_text",
        "type": "color",
        "visibility": {
          "controlling_field": "light_mode",
          "controlling_value_regex": "false",
          "operator": "EQUAL"
        },
        "default": {
          "color": "#FFFFFF"
        }
      },
      {
        "label": "Light Mode Background Color",
        "name": "lightmode_background",
        "type": "color",
        "visibility": {
          "controlling_field": "light_mode",
          "controlling_value_regex": "true",
          "operator": "EQUAL"
        },
        "default": {
          "color": "#F0F5FA"
        }
      },
      {
        "label": "Light Mode Text Color",
        "name": "lightmode_text",
        "type": "color",
        "visibility": {
          "controlling_field": "light_mode",
          "controlling_value_regex": "true",
          "operator": "EQUAL"
        },
        "default": {
          "color": "#0F1E2D"
        }
      }
    ]
  }
]