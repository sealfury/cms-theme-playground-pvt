              "loading": "lazy",
              "width": 40,
              "height": 40,
              "max_width": 40,
              "max_height": 40,
              "size_type": "exact"
            }
          }
        ]
      },
      {
        "label": "Cases",
        "name": "cases",
        "type": "group",
        "id": "menu_items.cases",
        "occurence": {
          "default": 2,
          "min": 1,
          "max": 2,
          "sorting_label_field": "cases.case"
