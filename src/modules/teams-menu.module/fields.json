            "type": "text",
            "id": "case.attribution"
          },
          {
            "label": "Read More Link",
            "name": "link",
            "type": "group",
            "id": "case.link",
            "children": [
              {
                "label": "Link URL",
                "name": "url",
                "type": "url",
                "supported_types": ["EXTERNAL", "CONTENT", "BLOG"]
              },
              {
                "label": "Link Text",
                "name": "text",
                "type": "text",
                "allow_new_line": false,
                "show_emoji_picker": false,
                "default": "Read more"
              }
            ]
          }
        ]
